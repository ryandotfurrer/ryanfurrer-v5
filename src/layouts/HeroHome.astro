---
import "../styles/global.css";

export interface Props {
  heroHeader: string;
  heroDescription?: string;
  heroParagraph?: string;
}

const { heroDescription, heroHeader, heroParagraph }: Props = Astro.props;
---

<section
  id="hero"
  class="container mx-auto grid h-3/4 grid-cols-1 place-content-center gap-12"
>
  <div id="hero-text-container" class="grid gap-2">
    <div
      id="hero-header-container"
      class="animate-fade animate-delay-700 animate-duration-500 animate-once animate-ease-in-out xl:max-w-[63%]"
    >
      <h2 class="text-3xl">
        {heroHeader}
      </h2>
    </div>
    <div
      id="hero-description-container"
      class="animate-fade-down animate-delay-1000 animate-duration-700 animate-once animate-ease-in-out xl:max-w-[63%]"
    >
      <p class="text-balance text-2xl font-semibold leading-none">
        {heroDescription}
      </p>
    </div>
    <div
      id="hero-paragraph-container"
      class="animate-fade-down animate-delay-[1200ms] animate-duration-500 animate-once animate-ease-in-out xl:max-w-[60%]"
    >
      <p class="text-balance text-xl font-semibold leading-none">
        {heroParagraph}
      </p>
    </div>
  </div>
  <div
    id="header-cta-container"
    class="container animate-fade-down animate-delay-1000 animate-duration-700 animate-once animate-ease-in-out"
  >
    <div>
      <div
        id="hero-link-container"
        class="flex flex-col text-lg font-semibold sm:gap-4 md:gap-2 lg:w-max"
      >
        <p
          class="flex place-items-center gap-4 transition-[gap] duration-500 ease-in-out hover:gap-8"
        >
          <a
            href="/projects"
            class="flex place-items-center gap-2 text-emerald-600 ease-in-out dark:text-emerald-400"
          >
            <i class="fa-solid fa-code-branch"></i>View my projects
          </a>
          <i
            class="fa-solid fa-arrow-right text-emerald-600 opacity-0 duration-300 ease-in-out dark:text-emerald-400"
          ></i>
        </p>
        <p
          class="flex place-items-center gap-4 transition-[gap] duration-500 ease-in-out hover:gap-8"
        >
          <a
            href="/blog"
            class="flex place-items-center gap-2 ease-in-out hover:text-zinc-900 dark:hover:text-zinc-50"
          >
            <i class="fa-solid fa-newspaper"></i>
             Read blog articles
          </a>

          <i
            class="fa-solid fa-arrow-right text-zinc-900 opacity-0 transition-opacity duration-300 ease-in-out dark:text-zinc-50"
          ></i>
        </p>
      </div>
    </div>
  </div>
</section>

