---
import HeaderNavBar from "../layouts/HeaderNavBar.astro";
import Hero from "../layouts/Hero.astro";
import SocialLinks from "../layouts/SocialLinks.astro";
import Footer from "../layouts/Footer.astro";
import "../styles/global.css";
const pageTitle = "404: Page Not Found";
const heroHeader = "Uh oh, a 404 Error?!";
const heroDescription = "Shoot, you're not supposed to see this.";
const heroParagraph =
  "This is awkward...sorry about that! It seems the page you tried visiting does not exist, or you've found a broken link. But while you're here ğŸ‘‡ğŸ»ğŸ‘‡ğŸ»ğŸ‘‡ğŸ»";
const heroImage = "/developer_code-inspection.svg";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <script
      is:inline
      src="https://kit.fontawesome.com/dec2579292.js"
      crossorigin="anonymous"></script>
    <title>{pageTitle}</title>
  </head>
  <body>
    <header>
      <HeaderNavBar />
      <Hero
        heroHeader={heroHeader}
        heroDescription={heroDescription}
        heroParagraph={heroParagraph}
        heroImage={heroImage}
      />
    </header>
    <main>
      <section>
        <article>
          <div id="read-more-blogs">
            <p>Can I interest you in some of my blogs?</p>
            <p>
              <div
                id="link-container"
                class="flex flex-col md:flex-row md:gap-6"
              >
                <p>
                  <a
                    href="/blog"
                    class="dark:text-edmerald-400 text-emerald-600"
                    >Yes I'd love to read some.</a
                  >
                </p>
                <p><a href="/">No, take me home.</a></p>
              </div>
            </p>
          </div>
          <div id="social-icons" class="grid grid-cols-1 gap-1">
            <p>Or maybe you'd like to follow me elsewhere?</p>
            <SocialLinks />
          </div>
        </article>
      </section>
    </main>
    <Footer />
  </body>
</html>
